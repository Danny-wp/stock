<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Stock" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>
    
    <style name="Widget.Stock.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Widget.Stock.TextView.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <style name="Widget.Stock.TextView.StockSymbol">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Widget.Stock.TextView.PriceUp">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.Stock.TextView.PriceDown">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.Stock.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Widget.Stock.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources> 